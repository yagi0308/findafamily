<%= render "shared/header" %>

<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span><br />
          <%= f.email_field :email, class:"btn-action", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>

        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上の半角英数字）" %>
          <span class="indispensable">必須</span><br />
          <%= f.password_field :password, class:"btn-action", id:"password", placeholder:"" %>

        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>