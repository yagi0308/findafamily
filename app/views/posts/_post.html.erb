    <div class="card">
      <%= link_to (image_tag post.animal_image, class: :card__img), post_path(post) %>
      <div class="card__body">
        <%= link_to post.title, post_path(post), class: :card__title %>
        <%= link_to post.address, post_path(post), class: :card__address %>
        <%= link_to "by #{post.user.nickname}", post_path(post.user), class: :card__user %>
      </div>
    </div>